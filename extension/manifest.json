{
  "name": "TechX",
  "description": "This extension allows you to share Claude, Gemini, Meta and ChatGPT conversations via URL.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://bard.google.com/*",
    "https://claude.ai/*",
    "https://www.meta.ai/*",
    "https://grok.com/*",
    "https://jomniconvo.duckdns.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://www.meta.ai/*",
        "https://grok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
