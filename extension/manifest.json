{
  "name": "TechX",
  "description": "Share Grok / Claude / Gemini / ChatGPT conversations via URL.",
  "version": "1.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://www.grok.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://meta.ai/*",
    "https://*.google.com/*",
    "https://jomniconvo.duckdns.org/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' data: https://fonts.gstatic.com https://use.typekit.net;"
  },
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/*",
        "https://www.grok.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://meta.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
